<div class="container-products">
  <div class="row">
    <h1 class="form-title">Real Time Products</h1>
    <div class="col-12 col-md-6">
      <div class="form-container" id="formAdd">
        <h3 class="form-title">Add New Product</h3>
        <div class="form-group">
          <label class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            placeholder="Title of the product"
            name="title"
            id="title"
          />
        </div>
        <div class="form-group">
          <label class="form-label">Description</label>
          <input
            type="text"
            class="form-control"
            placeholder="Description of the product"
            name="description"
            id="description"
          />
        </div>
        <div class="form-group">
          <div class="col-6">
            <label class="form-label">Price</label>
            <input
              type="text"
              class="form-control"
              placeholder="Price of the product"
              name="price"
              id="price"
            />
          </div>
          <div class="col-6">
            <label class="form-label">Code</label>
            <input
              type="text"
              class="form-control"
              placeholder="Unique id CODE of the product"
              name="code"
              id="code"
            />
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Image</label>
          <input
        type="file" 
        class="form-control"
        name="thumbnails"
        id="thumbnails"
          />
      </div>

        <input
          type="button"
          class="form-button form-button-success"
          value="Add Product (+)"
          id="btnAddProduct"
        />
      </div>
    </div>
    <div class="col-12 col-md-6">
      <div class="form-container" id="formDelete">
        <h3 class="form-title">Delete Product</h3>
        <div class="form-group">
          <label class="form-label">Delete Product by ID</label>
          <input
            type="text"
            class="form-control"
            placeholder="Id of the product"
            name="id"
            id="inputDeleteId"
          />
        </div>
        <input
          type="button"
          class="form-button form-button-danger"
          value="Delete Product (-)"
          id="btnDeleteProduct"
        />
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col" id="srvResponse"></div>
  </div>


<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/index.js"></script>

